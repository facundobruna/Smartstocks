  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api/v1"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "refresh_token",
      "value": ""
    },
    {
      "key": "scenario_id",
      "value": ""
    },
    {
      "key": "match_id",
      "value": ""
    },
    {
