{
  "info": {
    "name": "Smart Stocks API - Fase 4 Simulator",
    "description": "Colecci√≥n actualizada con endpoints del simulador",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api/v1"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "refresh_token",
      "value": ""
    },
    {
      "key": "scenario_id",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Simulator",
      "item": [
        {
          "name": "Get Easy Scenario",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.success && response.data) {",
                  "    pm.collectionVariables.set('scenario_id', response.data.scenario_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/simulator/easy",
              "host": ["{{base_url}}"],
              "path": ["simulator", "easy"]
            }
          },
          "response": []
        },
        {
          "name": "Get Medium Scenario",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.success && response.data) {",
                  "    pm.collectionVariables.set('scenario_id', response.data.scenario_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/simulator/medium",
              "host": ["{{base_url}}"],
              "path": ["simulator", "medium"]
            }
          },
          "response": []
        },
        {
          "name": "Get Hard Scenario",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.success && response.data) {",
                  "    pm.collectionVariables.set('scenario_id', response.data.scenario_id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/simulator/hard",
              "host": ["{{base_url}}"],
              "path": ["simulator", "hard"]
            }
          },
          "response": []
        },
        {
          "name": "Submit Decision - Buy",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scenario_id\": \"{{scenario_id}}\",\n  \"decision\": \"buy\",\n  \"time_taken_seconds\": 45\n}"
            },
            "url": {
              "raw": "{{base_url}}/simulator/submit",
              "host": ["{{base_url}}"],
              "path": ["simulator", "submit"]
            }
          },
          "response": []
        },
        {
          "name": "Submit Decision - Sell",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scenario_id\": \"{{scenario_id}}\",\n  \"decision\": \"sell\",\n  \"time_taken_seconds\": 30\n}"
            },
            "url": {
              "raw": "{{base_url}}/simulator/submit",
              "host": ["{{base_url}}"],
              "path": ["simulator", "submit"]
            }
          },
          "response": []
        },
        {
          "name": "Submit Decision - Hold",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scenario_id\": \"{{scenario_id}}\",\n  \"decision\": \"hold\",\n  \"time_taken_seconds\": 60\n}"
            },
            "url": {
              "raw": "{{base_url}}/simulator/submit",
              "host": ["{{base_url}}"],
              "path": ["simulator", "submit"]
            }
          },
          "response": []
        },
        {
          "name": "Get History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/simulator/history?limit=10",
              "host": ["{{base_url}}"],
              "path": ["simulator", "history"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/simulator/stats",
              "host": ["{{base_url}}"],
              "path": ["simulator", "stats"]
            }
          },
          "response": []
        },
        {
          "name": "Check Cooldown - Easy",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/simulator/cooldown/easy",
              "host": ["{{base_url}}"],
              "path": ["simulator", "cooldown", "easy"]
            }
          },
          "response": []
        },
        {
          "name": "Check Cooldown - Medium",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/simulator/cooldown/medium",
              "host": ["{{base_url}}"],
              "path": ["simulator", "cooldown", "medium"]
            }
          },
          "response": []
        },
        {
          "name": "Check Cooldown - Hard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/simulator/cooldown/hard",
              "host": ["{{base_url}}"],
              "path": ["simulator", "cooldown", "hard"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
