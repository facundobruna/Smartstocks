              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quiz_id\": \"{{quiz_id}}\",\n  \"answers\": [\n    {\n      \"question_id\": \"question-id-1\",\n      \"answer\": \"A\"\n    },\n    {\n      \"question_id\": \"question-id-2\",\n      \"answer\": \"B\"\n    },\n    {\n      \"question_id\": \"question-id-3\",\n      \"answer\": \"C\"\n    }\n  ],\n  \"time_taken_seconds\": 300\n}"
            },
            "url": {
              "raw": "{{base_url}}/quiz/submit",
              "host": ["{{base_url}}"],
