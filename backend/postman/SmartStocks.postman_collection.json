    },
    {
      "name": "4. Simulator",
      "item": [
        {
          "name": "Get Easy Scenario",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.success && response.data) {",
                  "    pm.collectionVariables.set('scenario_id', response.data.scenario_id);",
                  "    console.log('✅ Scenario ID saved');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/simulator/easy",
              "host": ["{{base_url}}"],
              "path": ["simulator", "easy"]
            }
          }
        },
        {
          "name": "Submit Decision",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"scenario_id\": \"{{scenario_id}}\",\n  \"decision\": \"buy\",\n  \"time_taken_seconds\": 45\n}"
            },
            "url": {
              "raw": "{{base_url}}/simulator/submit",
              "host": ["{{base_url}}"],
              "path": ["simulator", "submit"]
            }
          }
        }
      ]
    },
